@model E_Ticaret.WebUI.Models.ProductListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<h1>Ürünler</h1>
<td><a class="btn btn-sm btn-success" asp-controller="Admin" asp-action="Add" >Yeni Ürün Ekle</a></td>
<div>
    <table class="table">
        <tr>
            <td>Product Name</td>
            <td>Unit Price</td>
            <td>Unit in Stock</td>
            <td></td>
        </tr>
        @foreach (var item in Model.Products)
        {
    <tr>
        <td>@item.ProductName</td>
        <td>@item.Unitprice</td>
        <td>@item.UnitsInStock</td>
        <td><a class="btn btn-sm btn-info" asp-controller="Admin" asp-action="Update" asp-route-productId="@item.ProductId"> Ürün Güncelle</a></td>
        <td><a class="btn btn-sm btn-danger" asp-controller="Admin" asp-action="Delete" asp-route-productId="@item.ProductId"> Ürün Sil</a></td>
    </tr>
        }
    </table>
</div>
